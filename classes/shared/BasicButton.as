package classes.shared // class to define basic button graphics and behaviours....{	// import libraries...	import flash.events.MouseEvent;	import flash.events.Event;	import flash.display.MovieClip;	import classes.sound.SoundManager;	// class code...	public class BasicButton extends MovieClip{		// class variables...		private var _soundManager:SoundManager = SoundManager.getInstance();		protected var _parentMenu:MovieClip;		// class functions...		public function BasicButton() 		{			// constructor code			addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		}		// keep all functionality with the class		public function setUp(menu:MovieClip,xPos:Number,yPos:Number,btn_name:String):void		{			_parentMenu = menu;			x = xPos;			y = yPos;			name = btn_name;			txt.text = name;			gotoAndStop('_up');		}		// add all the listeners when added to the stage		protected function onAdded(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(MouseEvent.CLICK, onClick);			addEventListener(MouseEvent.MOUSE_OVER, onOver);			addEventListener(MouseEvent.MOUSE_OUT, onOut);		}		// remove all the listeners when removed from the stage		protected function onRemove(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, onRemove);			removeEventListener(MouseEvent.CLICK, onClick);			removeEventListener(MouseEvent.MOUSE_OVER, onOver);			removeEventListener(MouseEvent.MOUSE_OUT, onOut);		}				protected function onOver(e:MouseEvent):void		{			gotoAndStop('_over');		}				protected function onOut(e:MouseEvent):void		{			gotoAndStop('_up');		}		// Calls the parent menu public function when clicked...		protected function onClick(e:MouseEvent):void		{			// play click sound...			_soundManager.playSound("click",2);			// sub classes override this function			_parentMenu.btnClicked(name);		} // end of functions	} // end of class} // end of package