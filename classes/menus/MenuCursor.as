package classes.menus // class calls custom cursor graphic and updates its movement...{	// import libraries...	import flash.display.MovieClip;	import flash.events.Event;	import classes.app.App;	// class code...	public class MenuCursor extends MovieClip	{		// class variables...		private var _app:App;		// class functions...		public function MenuCursor(app:App) 		{			// constructor code...			_app = app;			addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		} 		private function onAdded(e:Event):void		{			addEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onRemove(e:Event):void		{			removeEventListener(Event.ENTER_FRAME,onEnterFrame);		}		private function onEnterFrame(e:Event):void		{			updateCursor();		}		private function updateCursor():void		{			// function to link custom cursor graphic to mouse movement...			// stage called to give absolute position...			x = stage.mouseX;			y = stage.mouseY;		} // end of functions...	} // end of class...} // end of package...