package classes.menus // class builds high score table screen...{	// import libraries and classes...	import flash.display.MovieClip;	import flash.events.Event;	import classes.app.App;	import classes.menus.HighScoreRow;	import classes.shared.BasicButton;	// class code...	public class HighScores extends MovieClip	{		// class variables...		private var _app:App;		// for buttons...		private var _buttonNames:Array = ["Main Menu"];		private var _buttons:Array;		// class functions...		public function HighScores(app:App,xPos:Number,yPos:Number) 		{			// constructor code			_app = app;			x = xPos;			y = yPos;						addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		} 				private function onRemove(e:Event):void		{			// remove all buttons...			for(var i:int = 0; i < _buttons.length; i++)			{				removeChild(_buttons[i]);			}			_buttons = null;		}				private function onAdded(e:Event):void 		{			removeEventListener(Event.ADDED_TO_STAGE, onAdded);			init();		} 				private function init():void		{			// call function to show high scores...			showScores();			// for buttons...			_buttons = [];			// position for top button...			var xPos:Number = 150;			var yPos:Number = 525;						for(var i:int = 0; i < _buttonNames.length; i++)			{				var b:BasicButton = new BasicButton();				b.setUp(this,xPos,yPos,_buttonNames[i]);				addChild(b);				_buttons.push(b);			}		}		private function showScores():void		{			// set position of top row...			var yPos:Number = 80;			// loop to set ypos position and create new row for each of the array values...			for(var i:int = 0; i < _app._scoresArray.length; i++)			{				var row:HighScoreRow = new HighScoreRow(_app,i,yPos);				yPos += row.height;							addChild(row);			}		}				public function btnClicked(button_name:String):void		{			switch(button_name)			{				case "Main Menu":					_app.drawMainMenu();				break;			}		} // end of functions	} // end of class} // end of package