package classes.menus // class builds instructions screen...{	// import libraries and classes...	import flash.display.MovieClip;	import flash.events.Event;	import classes.app.App;	import classes.shared.BasicButton;	// class code...	public class Instructions extends MovieClip{		// class variables...		private var _app:App;		// array that holds button names...		private var _buttonNames:Array = ["Main Menu"];		// array that holds buttons...		private var _buttons:Array;		// class functions...		public function Instructions(app:App,xPos:Number,yPos:Number) 		{			// constructor code...			_app = app;			x = xPos;			y = yPos;			// listeners...			addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		} 				private function onRemove(e:Event):void		{			// remove all buttons...			for(var i:int = 0; i < _buttons.length; i++)			{				removeChild(_buttons[i]);			}			_buttons = null;		}				private function onAdded(e:Event):void 		{			removeEventListener(Event.ADDED_TO_STAGE, onAdded);			init();		} 				private function init():void		{			// create a new array..			_buttons = [];			// set position of top button...			var xpos:Number = 150;			var ypos:Number = 525;			// loop to set position of buttons in array...			for(var i:int = 0; i < _buttonNames.length; i++)			{				var b:BasicButton = new BasicButton();				b.setUp(this,xpos,ypos,_buttonNames[i]);				addChild(b);				_buttons.push(b);			}		}				public function btnClicked(button_name:String):void		{			switch(button_name)			{				case "Main Menu":					_app.drawMainMenu();				break;			}		} // end of functions	} // end of class} // end of package