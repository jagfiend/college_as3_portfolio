package classes.menus // class builds the game over screen....{		// import libraries and classes...	import flash.display.MovieClip;	import flash.events.Event;	import classes.app.App;	import classes.menus.InputTextField;	import classes.shared.DynamicTextField;	import classes.shared.BasicButton;	// class code...	public class GameOver extends MovieClip	{		// class variables...		private var _app:App;		// for text fields...		private var _playerName:String;		private var _playerScore:String;		private var _outputField:DynamicTextField;		private var _inputField:InputTextField;		// for buttons...		private var _buttonNames:Array = ["Add Name","Restart","Main Menu"];		private var _buttons:Array;		// class functions...		public function GameOver(app:App,xPos:Number,yPos:Number,score:String) 		{			// constructor code			_app = app;			_playerScore = score;			// output field shows score acheived by player...			_outputField = new DynamicTextField();			addChild(_outputField);			_outputField.x = 350;			_outputField.y = 200;			_outputField.width = 400;			_outputField.height = 100;			_outputField.txt.text = score;			// input field for player to enter name against their score...			_inputField = new InputTextField();			addChild(_inputField);			_inputField.x = 350;			_inputField.y = 320;			_inputField.txt.text = "player 1";			// screen stage position...			x = xPos;			y = yPos;			// listeners...			addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		} 				private function onRemove(e:Event):void		{			// remove all buttons...			for(var i:int = 0; i < _buttons.length; i++)			{				removeChild(_buttons[i]);			}			_buttons = null;		}				private function onAdded(e:Event):void 		{			removeEventListener(Event.ADDED_TO_STAGE, onAdded);			// call init function...			init();		} 				// add the buttons...		private function init():void		{			// set focus to input field...			stage.focus = _inputField.txt;			// move caret to end of the text field...nice usability touch...			_inputField.txt.setSelection(_inputField.txt.length,_inputField.txt.length);			// create a new array..			_buttons = [];			// set position of first button...			var xpos:Number = 150;			var ypos:Number = 310;			// loop to create buttons...			for(var i:int = 0; i < _buttonNames.length; i++)			{				var b:BasicButton = new BasicButton();				ypos += b.height + 10;				b.setUp(this,xpos,ypos,_buttonNames[i]);				addChild(b);				_buttons.push(b);			}		}				public function btnClicked(button_name:String):void		{			switch(button_name)			{				case "Add Name":					_playerName = _inputField.txt.text;					_app.addEntry(_playerName,_playerScore);				break;				case "Restart":					_app.startGame();				break;				case "Main Menu":					_app.drawMainMenu();				break;			}		} // end of functions	} // end of class} // end of package