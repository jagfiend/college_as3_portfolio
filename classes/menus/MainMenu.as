package classes.menus // class to build main menu...{	// import libraries and classes...	import flash.display.MovieClip;	import flash.events.Event;	import classes.app.App;	import classes.shared.BasicButton;	// class code...	public class MainMenu extends MovieClip	{		// class variables...		private var _app:App;		// array that holds button names...		private var _buttonNames:Array = ["Play Game","Instructions","High Scores"];		// array that holds buttons...		private var _buttons:Array;		// class functions...		public function MainMenu(app:App,xPos:Number,yPos:Number) 		{			// constructor code			_app = app;			x = xPos;			y = yPos;			// listeners...			addEventListener(Event.ADDED_TO_STAGE, onAdded);			addEventListener(Event.REMOVED_FROM_STAGE, onRemove);		} 				private function onRemove(e:Event):void		{			// remove all buttons...			for(var i:int = 0; i < _buttons.length; i++)			{				removeChild(_buttons[i]);			}			_buttons = null;		}				private function onAdded(e:Event):void 		{			removeEventListener(Event.ADDED_TO_STAGE, onAdded);			init();		} 		// add the buttons...		private function init():void		{			// create a new array..			_buttons = [];			// set position of top button...			var xpos:Number = 150;			var ypos:Number = 50;			// loop to create buttons and set positions			for(var i:int = 0; i < _buttonNames.length; i++)			{				var b:BasicButton = new BasicButton;				ypos += b.height + 10;				b.setUp(this,xpos,ypos,_buttonNames[i]);				addChild(b);				_buttons.push(b);			}		}				public function btnClicked(button_name:String):void		{			// switch statement for option selection...			switch(button_name)			{				case "Play Game":					// tell the game class to remove the main menu and start the game...					_app.startGame();				break;				case "Instructions":					// tell the game class to remove the main menu and open instructions page...					_app.drawInstructions();				break;				case "High Scores":				// tell the game class to remove the main menu and open high scores page...					_app.drawScores();				break;			}		} // end of functions	} // end of class} // end of package