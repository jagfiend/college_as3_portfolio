package classes.game // this class tweaked from the source code files at http://www.computerarts.co.uk/tutorials/cool-particle-effects-flash{	// import library...	import flash.display.*; 	// class code...	public class Particle	{			// class variables...		public var clip:DisplayObject;		public var xVel:Number = 0; 		public var yVel:Number = 0;		public var drag:Number = 1; 		public var gravity:Number = 0; 		public var shrink:Number = 1; 		public var fade:Number = 0;  		// class functions...		public function Particle(symbolClass:Class,target:DisplayObjectContainer,xpos:Number,ypos:Number)		{			// constructor to create this particle object.			// make the particle clip			clip = new symbolClass();			// add it to the target			target.addChild(clip); 			// and move it to its starting position			clip.x = xpos; 			clip.y = ypos; 		}				public function update():void		{			// add the velocity to the clip's position			clip.x += xVel; 			clip.y += yVel; 			// apply drag			xVel *= drag; 			yVel *= drag; 			// add gravity			yVel += gravity; 			// scale..			clip.scaleX *= shrink;			clip.scaleY *= shrink; 			// fade..			clip.alpha -=fade; 		}		// take the clip off the stage		public function destroy():void		{			clip.parent.removeChild(clip); 		} // end of functions	} // end of class} // end of package