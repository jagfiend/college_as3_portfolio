package classes.game // class draws a gradient for the gameplay screen sky....{	// import libraries and classes...	import flash.display.MovieClip;	import flash.display.Shape; 	import flash.display.GradientType; 	import flash.geom.Matrix; 	import classes.game.Game;	// class code...	public class TheSky extends MovieClip	{		// class variable...		private var _game:Game;		// class function...		public function TheSky(game:Game) 		{			// constructor code			_game = game;			// the following code is has been lifted and tweaked from the abode help page on gradients...			// set gradient variables...			var type:String = GradientType.LINEAR; 			var colors:Array = [0x111111,0x0F1E46]; 			var alphas:Array = [1,1]; 			var ratios:Array = [0,255]; 			var spreadMethod:String = "SpreadMethod.PAD"; 			var interp:String = "InterpolationMethod.LINEAR_RGB"; 			var focalPtRatio:Number = 0; 			// set matrix variables...			var matrix:Matrix = new Matrix(); 			var boxWidth:Number = 800; 			var boxHeight:Number = 800; 			var boxRotation:Number = Math.PI/2; // 90°... this flips the gradient on to its side, else it would be left to right...			var tx:Number = 0; 			var ty:Number = 0; 			matrix.createGradientBox(boxWidth,boxHeight,boxRotation,tx,ty); 			// create sky "shape"...			var sky:Shape = new Shape; 			sky.graphics.beginGradientFill(type,colors,alphas,ratios,matrix,spreadMethod,interp,focalPtRatio); 			sky.graphics.drawRect(0,0,800,800); 			addChild(sky);		} // end of functions	} // end of class} // end of package