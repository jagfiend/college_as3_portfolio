package classes.game // class draws missiles by passing values to its drawing moving object parent class... {	// class code...			public class Missile extends DrawMovingObject 	{		// class variables...		// using two random numbers prevents a bias in the code...		// early prototype showed that bombard would focus in two areas with one random number...		private var randomNumber1:Number = Math.random();		private var randomNumber2:Number = Math.random();		private var roundedRandomNumber1:Number = Math.round(randomNumber1 * 100);		private var roundedRandomNumber2:Number = Math.round(randomNumber2 * 100);		private var directionModifier:Number;		public var velX:Number;		public var velY:Number;		// class functions...		public function Missile(game:Game) 		{			// constructor code			super(game,5,0xED1945,2,0xED1945,10);			_game = game;			// setting start position of missile, x determined randomly; y set off stage to provide more natural bombard effect...			x = 150 + (roundedRandomNumber1 * 5);			y = -1 * (roundedRandomNumber1 * 4);			// direction modifier to determine randomly if the missile will move to the left or right...			if(roundedRandomNumber1 % 2 == 0){				directionModifier = 1;			} else {				directionModifier = -1;			}			// set x and y velocities, these will be used to increment the position of the missile in each frame...			velY = 4;			velX = directionModifier * roundedRandomNumber2 / 40;		} // end of functions...	} // end of class} // end of package