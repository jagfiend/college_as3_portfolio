package classes.controller // class inteprets key strokes... {		import classes.game.Game;	import flash.events.Event;	import flash.events.KeyboardEvent;		public class KeyboardController	{		// class variables...		private var _game:Game;		private var keys:Array;		private var _spaceKey:int = 32;		// class functions...		public function KeyboardController(game:Game)		{			_game = game;			keys = new Array(256);		}		// Set from the key down event, ie key pressed		public function downhandle(e:KeyboardEvent):void        {            keys[e.keyCode] = true;			// trace(e.keyCode)			// set pause boolean...			if(_game._isPaused == false)			{				_game._isPaused = true;			} else {				_game._isPaused = false;			}        } // end of functions	} // end of class} // end of package